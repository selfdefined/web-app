<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Use title with path, or append a space to the page title to avoid collpasing with the meta title #}
    {% set pageTitle = titleWithPath or title + ' ' or '' %}

    {% set alert = flag.level or '' %}

    {% set shortExcerpt = excerpt.substring(0, 50) + '... [see full definition on Self-Defined]'%}

    {% set shortPreview = shortExcerpt or renderData.description or description or metadata.description %}

    {% set longPreview = excerpt or renderData.description or description or metadata.description %}

    <title>{{ pageTitle + metadata.title }}</title>

    <meta
      name="twitter:description"
      content="{{ alert + ": " + shortPreview }}"
    >

    <meta name="twitter:card" content="summary"/>

    <meta name="twitter:title" content="{{ pageTitle }}"/>

    <meta
      name="og:description"
      content="{{ alert + ": " + longPreview }}"
    >

    <meta name="og:title" content="{{ pageTitle }}"/>

    <meta
      name="description"
      content="{{ alert + ": " + longPreview }}"
    >


    <link rel="stylesheet" href="https://use.typekit.net/qlo3dpu.css" rel="preload"/>
    <link rel="stylesheet" href="{{ '/assets/css/base.css' | url }}">
    {% block pageStyles %}
    {% endblock pageStyles %}
  </head>
  <body>
    {% block content %}{% endblock content %}
    <footer class="site-footer">
      <nav aria-label="Complimentary">
        <ul class="navigation-list">
          <li>
            <a href="/documentation/">Documentation</a>
          </li>
        </ul>
      </nav>
    </footer>
    {% block pageScript %}
    {% endblock pageScript %}
  </body>
</html>
